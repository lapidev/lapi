{
  "name": "lapidev",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "internal/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "prettier": "prettier '**/*' --ignore-unknown --ignore-path .prettierignore",
    "prettier:write": "pnpm prettier -- --write",
    "prettier:check": "pnpm prettier -- --check",
    "prepare": "husky install",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "plop": "plop"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "globby": "^12.0.2",
    "lint-staged": "^12.1.2",
    "plop": "^3.0.4",
    "prettier": "^2.5.1",
    "turbo": "^1.0.6"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "cache": false
      },
      "prettier": {},
      "prettier:write": {},
      "prettier:check": {
        "cache": false
      },
      "dev": {
        "cache": false
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "test:coverage": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "test/coverage/**"
        ]
      }
    },
    "baseBranch": "origin/main"
  },
  "prettier": "./internal/prettier-config"
}
