{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": ["src/**/*"]
    },
    "lint:fix": {
      "outputs": ["src/**/*"]
    },
    "dev": {
      "cache": false
    },
    "watch": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["test/coverage/**"]
    }
  }
}
